@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1>Login Palestra</h1>

    <h4>Inserimento dati</h4>
    <hr />
    <div class="row">
        <form asp-action="VerifyLogin" asp-controller="login" class="col-md-4">
            <div class="form-group">
                <label title="User" class="control-label">User</label>
                <input asp-for="User" class="form-control" />
            </div>
            <div class="form-group">
                <label title="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" onclick="" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>